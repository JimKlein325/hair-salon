<!DOCTYPE html>
<html>
<head>
  <title>Most Groovey Hair Salon!</title>
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  <link rel='stylesheet' href="/Content/css/styles.css">
</head>
<body>
  <div class="page-header">
    <h1>@Model["stylist"].GetName()</h1>
  </div>
  <div class="container">
    <h2>Clients</h2>
    @if (Model.Count != 0)
    {
      <table>
        @foreach (var client in Model["clients"])
        {
          <tr>
            <td>
              <h2>@client.GetName()</h2>
            </td>
            <td>
              <form action = "/clients/edit/@client.GetId()" method = "get">
                <button class="btn-primary btn-xs" type ="submit">Edit</button>
              </form>
            </td>
            <td>
              <form action = "/clients/delete/@client.GetId()" method = "post">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn-warning btn-xs" type ="submit">Delete</button>
              </form>
            </td>
          </tr>
        }
      </table>
    }
    else
    {
      <p>No Stylists have been added yet!</p>
    }

    <h3>Add a Client</h3>
    <form action = "/clients/new/@Model["stylist"].GetId()" method = "post">
      <label for = "client-name">Name</label>
      <input id = "client-name" name = "client-name" type = "text">
      <button type = "submit">Add Client</button>
    </form>
    <br>
    <p><a href="/">Return home</a></p>
  </div>
</body>
</html>
